<h1>Search Words</h1>


<%= form_for @word, url: {action: "create"} do |f| %>
  <%= f.text_field :word %>
  <%= f.submit "Create" %>
<% end %>

<p> searched word: <%= @word.word %> </p> 

<li class="definition-list featured"> <%= @def_array[0] %></li>
<% for x in 1...@def_array.length %>
	<li class="definition-list secondary"> <%= @def_array[x] %></li>
<% end %>